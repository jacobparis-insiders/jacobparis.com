{
  "name": "jacobparis.com",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:icons": "tsx ./other/build-icons.ts",
    "build:redirects": "cp ./app/_redirects ./build/_redirects",
    "build:workers": "cpx ./app/**/*.worker.js ./build/",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "dev:content": "tsx -r dotenv/config others/refresh-on-content-change.ts",
    "dev:remix": "NODE_ENV=development remix dev -c \"tsx --require dotenv/config --require ./mocks ./server.ts --watch ./server.ts\" --manual",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "NODE_ENV=production tsx ./server.ts",
    "start:mocks": "NODE_ENV=production tsx --inspect --require ./mocks ./server.ts",
    "typecheck": "tsc -b ",
    "validate": "run-p lint typecheck",
    "validate:deployable": "node -r esbuild-register -r dotenv/config others/is-deployable.js"
  },
